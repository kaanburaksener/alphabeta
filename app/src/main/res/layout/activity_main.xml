<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/letterTab"
    android:background="@color/background_main">

    <TextView
        android:id="@+id/uppercaseLetter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:background="@color/third"
        android:textColor="@color/secondary_text"
        android:textSize="56sp"
        android:elevation="3dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/lowercaseLetter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:background="@color/second"
        android:textColor="@color/primary_text"
        android:textSize="56sp"
        android:elevation="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/pronunciation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:background="@color/first"
        android:textColor="@color/primary_text"
        android:textSize="56sp"
        android:elevation="3dp"
        android:textStyle="italic"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:id="@+id/navigation"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="4dp"
        android:background="@color/primary">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|left"
            android:background="@drawable/border_right">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Geri"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="24dp"
                android:drawableLeft="@drawable/ic_navigate_before_white_36dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|left">

            <TextView
                android:id="@+id/forward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ä°leri"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/primary_text"
                android:textSize="24dp"
                android:drawableRight="@drawable/ic_navigate_next_white_36dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>